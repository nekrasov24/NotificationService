{
  "openapi": "3.0.1",
  "info": {
    "title": "NotificationService",
    "version": "1.0"
  },
  "paths": {
    "/api/Notification/sendmail": {
      "post": {
        "tags": [
          "Notification"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestMailNotificationModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestMailNotificationModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/RequestMailNotificationModel"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Notification/getinfo": {
      "post": {
        "tags": [
          "Notification"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Notification/sendsmstophone": {
      "post": {
        "tags": [
          "Notification"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestSmsNotificationModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestSmsNotificationModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/RequestSmsNotificationModel"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Notification/sendsms": {
      "get": {
        "tags": [
          "Notification"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RequestMailNotificationModel": {
        "required": [
          "content",
          "publisherAdress",
          "recieverAdress",
          "topic"
        ],
        "type": "object",
        "properties": {
          "publisherAdress": {
            "minLength": 1,
            "type": "string"
          },
          "recieverAdress": {
            "minLength": 1,
            "type": "string"
          },
          "topic": {
            "maxLength": 30,
            "minLength": 0,
            "type": "string"
          },
          "content": {
            "maxLength": 500,
            "minLength": 0,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "RequestSmsNotificationModel": {
        "required": [
          "publisherAdress",
          "recieverAdress",
          "text"
        ],
        "type": "object",
        "properties": {
          "publisherAdress": {
            "minLength": 1,
            "pattern": "^(([^<>()\\\\[\\]\\\\.,;:\\s@\"]+(\\.[^<>()\\\\[\\]\\\\.,;:\\s@\"]+)*)|(\".+\"))@((\\[[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}])|(([a-zA-Z\\-0-9]+\\.)+[a-zA-Z]{2,}))$",
            "type": "string"
          },
          "recieverAdress": {
            "minLength": 1,
            "pattern": "^(([^<>()\\\\[\\]\\\\.,;:\\s@\"]+(\\.[^<>()\\\\[\\]\\\\.,;:\\s@\"]+)*)|(\".+\"))@((\\[[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}])|(([a-zA-Z\\-0-9]+\\.)+[a-zA-Z]{2,}))$",
            "type": "string"
          },
          "text": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  }
}